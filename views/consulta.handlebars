<div class="container">
    <h4>Consultar - Cardápio</h4>
    <p>Aqui você pode Consultar as informações de um item do cardapio</p>
    <div class="row">
        <div class="col-1">
            &nbsp;
        </div>
    </div>
    <div class = "container">
        <div id="Cardapio">
            <div class = "row">
                {{#each data}}
                    <div class = "col-sm">
                       <div class="card border-0" style="width: 18rem;">
                    {{#if this.imagem}}
                    <img src="{{this.imagem}}" alt="Imagem de {{this.nome}}">
                    {{else}}
                    Imagem indisponivel
                    {{/if}}
                        <div class="card-body">
                          <h5 class="card-title">{{nome}}</h5>
                          <p class="card-text"></p>R$:{{valor}}</p>
                          <p class="card-text">Ingredientes: {{ingrediente}}</p></p>
                          <p class="card-text">Descrição: {{descricao}}</p></p>
                          <div class = "container text-center">
                            <div class = "row align-self-center">
                              <div class = "col"><a href="/editar/{{id}}"><button class="btn btn-primary">Editar</button></a></div>
                              <div class = "col"><a href="/excluir/{{id}}"><button class="btn btn-danger">Excluir</button></a></div></div>
                            </div>
                        </div>
                      </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>